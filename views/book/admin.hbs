<table class="table table-primary text-center">
   <thead>
      <tr>
         <th colspan="3" class="h1 text-danger">BOOK LIST</th>
         <th>
            <a href="/book/add" class="btn btn-primary">Add</a>
         </th>
      </tr>
      <tr>
         <th colspan="2">
            <form action="/book/search" method="post">
               <input class="form-control" type="search" name="title"
               placeholder="Search by title" required>
            </form>
         </th>
         <th colspan="2">
            <a href="/book/sort/asc" class="btn btn-secondary">Price ASC</a>
            <a href="/book/sort/desc" class="btn btn-success">Price DESC</a>
         </th>
      </tr>
      <tr>
         <th>Book Title</th>
         <th>Book Price</th>
         <th>Book Cover</th>
         <th>Menu</th>
      </tr>
   </thead>
   <tbody>
      {{#each books }}
      <tr>
         <td>{{ title }}</td>
         <td>${{ price }}</td>
         <td>
            <a href="/book/detail/{{ _id}}">
               <img src="{{ cover }}" alt="book cover" width="100" height="120">
            </a>
         </td>
         <td>
            <a class="btn btn-info" href="/book/detail/{{ _id}}">Detail</a>
            <a class="btn btn-warning" href="/book/edit/{{ _id}}">Edit</a>
            <a class="btn btn-danger" href="/book/delete/{{ _id}}"
               onclick="return confirm('Are you sure to delete this book ?')">Delete</a>
         </td>
      </tr>
      {{/each}}
   </tbody>
</table>